extends ./layout.jade

block content
  #body(data-control='interactive')
    h2 Demo
    h3 Inputs
    p Click to edit
    .row
      .col
        h4 Jade Input
        pre(data-control='input-jade')
          code
            :jadesrc
              doctype 5
              html(lang="en")
                head
                  title= pageTitle
                  script(type='text/javascript').
                    if (foo) {
                       bar(1 + 5)
                    }
                body
                  h1 Jade - node template engine
                  #container.col
                    if youAreUsingJade
                      p You are amazing
                    else
                      p Get on it!
                    p.
                      Jade is a terse and simple
                      templating language with a
                      strong focus on performance
                      and powerful features.
      .col
        h4 Locals
        pre(data-control='input-js')
          code
            :jssrc
              {
                pageTitle: 'Jade Demo',
                youAreUsingJade: true
              }
    h3 Outputs
    .row
      .col
        h4 Compiled Template
        pre(data-control='output-js')
      .col
        h4 HTML Output
        pre(data-control='output-html')